<style>
      body {
        background-image: url("https://www.oakcreekgolfclub.com/wp-content/uploads/2020/08/OCGC_VideoStill-1280x720.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        background-size: cover;
      }
</style>
<center>
<h1 class="white-text"><%=@user.name.split(" ").each{|t| t.capitalize}.join(" ")%></h1>


<center>
  <div class="row">
    <div class="col s12 m3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%=@user.name%></span>
          <p><%=@user.bio%></p>
        </div>

      </div>
    </div>
  </div>

<form action="/user/<%= @user.id %>" method="post">
 
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Profile" class="btn-small red white-text">
</form>
  